<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityStep1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomMenuFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/background_color"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background_color"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/bottomMenuFragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/back_button"
                style="@style/BackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onBackPressed"
                android:src="@drawable/back_button"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tips_creating_curriculum"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back_button" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="344dp"
                android:layout_height="154dp"
                android:textColor="@color/black"
                android:layout_marginTop="36dp"
                android:text=" Montar um currículo atraente é uma das etapas mais importantes para sua
      Primeira Oportunidade. Ele é o fator mais chamativo que os recrutadores
      vão perceber quando você se candidatar a uma vaga. Um currículo bem
      estruturado e com um bom design vai aumentar suas chances de garantir uma
      entrevista. Vamos ver o que compõe um currículo:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="276dp"
                android:layout_height="260dp"
                android:src="@drawable/textbook"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_marginTop="36dp"
                android:text=" Dados Pessoais: Informações básicas que o recrutador precisa saber"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"

                android:text="Objetivo Profissional: O que você está buscando naquela vaga?"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"

                android:text="Formação Acadêmica: Auxilia o recrutador a saber mais sobre suas
          experiências acadêmicas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text=" Experiência Profissional: Saber se você já trabalhou antes pode
          auxiliar no momento da contratação"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text=" Habilidades: Importante para o recrutador saber se você possui os
          conhecimentos exigidos pela vaga"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Informações Adicionais: Informações que sejam um diferencial em você
          como projetos nos quais trabalhou ou idiomas que aprendeu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"

                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="289dp"
                android:layout_height="237dp"
                android:src="@drawable/entrepreneur"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />


            <TextView
                android:id="@+id/textView16"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"

                android:text=" Dados Pessoais: Coloque seu nome completo, telefone, e-mail, cidade e
        estado. Não é necessário incluir CPF, RG, foto ou informações
        adicionais, apenas coloque se for requisitado pelo recrutador ou nas
        exigências da vaga."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:src="@drawable/section1_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="@color/black"

                android:text="Objetivo Profissional: Ter um objetivo claro facilita a entender o que
        você procura. Como por exemplo: Estou buscando desenvolver minhas
                habilidades de Desenvolvimento de Software em um estágio na minha
                área. Isso já ajuda o recrutador a ter um entendimento do que você
        está buscando."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="354dp"
                android:layout_height="334dp"
                android:layout_marginTop="56dp"
                android:src="@drawable/section1_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="224dp"
                android:textColor="@color/black"

                android:text="Formação Acadêmica: Coloque todas as suas informações acadêmicas.
        Coloque o nome da escola ou universidade, o curso e o ano de conclusão
        ou previsão de término. Se você tem certificações, sempre adicione-as
        para contribuir no contexto das suas capacidades profissionais."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="347dp"
                android:layout_height="160dp"
                android:layout_marginTop="56dp"
                android:src="@drawable/section1_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_marginTop="232dp"
                android:text="Experiência Profissional: Mesmo que você não tenha experiência
        profissional, pode incluir projetos desenvolvidos no decorrer do seu
        curso ou ensino. Na Primeira Oportunidade não esperamos que os
        candidatos possuam experiência prévia."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="382dp"
                android:layout_height="273dp"
                android:layout_marginTop="56dp"
                android:src="@drawable/section1_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_marginTop="180dp"
                android:text="Habilidades: Liste suas habilidades técnicas e comportamentais. Isso
        inclui o uso de softwares comuns (como Excel, Photoshop, etc.),
        programação, idiomas falados, e suas competências de relacionamento como
        trabalho em equipe, comunicação e liderança."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.489"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="368dp"
                android:layout_height="280dp"
                android:layout_marginTop="56dp"
                android:src="@drawable/section1_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"

                android:text="Informações Adicionais: Aqui você pode colocar prêmios, publicações,
        participações em eventos e hobbies que adicionem um pouco de contexto
        sobre você como pessoa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />

            <TextView
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Mantenha o seu currículo claro, organizado e atraente! Atualize suas
        informações com o decorrer do tempo e apenas insira o que for relevante
        para o contexto da sua área, sem muita informação trivial."
                android:layout_marginBottom="50dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>






    <fragment
        android:id="@+id/bottomMenuFragment"
        android:name="com.fragments.BottomMenuFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>