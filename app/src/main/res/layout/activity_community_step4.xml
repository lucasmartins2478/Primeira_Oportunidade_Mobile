<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityStep4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomMenuFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/background_color"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background_color"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/bottomMenuFragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/back_button"
                style="@style/BackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onBackPressed"
                android:src="@drawable/back_button"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/know_competences"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back_button" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="344dp"
                android:layout_height="154dp"
                android:textColor="@color/black"
                android:layout_marginTop="36dp"
                android:text=" Conheça as Competências Que Farão a Diferença na Sua Carreira No mundo do
      trabalho atual, desenvolver as competências certas pode ser o fator
      decisivo para conquistar as melhores oportunidades. Aqui na Primeira
      Oportunidade, acreditamos que o sucesso profissional vai além do
      conhecimento técnico. As empresas buscam por jovens talentos que possuam
      habilidades comportamentais, adaptabilidade e visão de futuro."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="276dp"
                android:layout_height="260dp"
                android:src="@drawable/textbook"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_marginTop="36dp"
                android:text=" Competências Técnicas (Hard Skills) As competências técnicas são aquelas
      diretamente relacionadas à sua área de atuação. São os conhecimentos que
      você adquire por meio de cursos, treinamentos e experiências práticas, e
      que podem ser facilmente mensurados. Aqui estão algumas das competências
      que ajudarão a destacar o seu perfil:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"

                android:text="Programação e Desenvolvimento de Software"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"

                android:text="Formação Acadêmica: Auxilia o recrutador a saber mais sobre suas
          experiências acadêmicas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text=" Análise de Dados e Business Intelligence"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text=" Design Gráfico e UI/UX"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Marketing Digital e SEO"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"

                app:layout_constraintTop_toBottomOf="@+id/textView14" />


            <TextView
                android:id="@+id/textView16"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:text="Gestão de Projetos"

                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="319dp"
                android:layout_height="198dp"
                android:layout_marginTop="56dp"
                android:src="@drawable/programmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="@color/black"

                android:text="Competências Comportamentais (Soft Skills) As competências comportamentais
    são cada vez mais valorizadas no ambiente de trabalho moderno. Elas estão
    relacionadas à forma como você lida com os desafios do dia a dia, se
    comunica com sua equipe e toma decisões. Aqui estão algumas das competências
    que ajudarão a destacar o seu perfil:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"

                android:text="Formação Acadêmica: Coloque todas as suas informações acadêmicas.
        Coloque o nome da escola ou universidade, o curso e o ano de conclusão
        ou previsão de término. Se você tem certificações, sempre adicione-as
        para contribuir no contexto das suas capacidades profissionais."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"

                android:text="Comunicação Eficaz: Saber transmitir suas ideias com clareza e escutar
          ativamente seus colegas e gestores."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"

                android:text="Trabalho em Equipe: Capacidade de colaborar e contribuir em grupos
          multidisciplinares."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.489"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:text="Resolução de Problemas: Habilidade para identificar, analisar e
          encontrar soluções criativas para os desafios que surgem."

                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Inteligência Emocional: Gerenciar suas emoções e entender as dos
          outros, criando um ambiente de trabalho positivo e produtivo.."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.475"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Inteligência Emocional: Gerenciar suas emoções e entender as dos
          outros, criando um ambiente de trabalho positivo e produtivo."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView10" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Adaptabilidade e Flexibilidade: Estar preparado para mudanças e novos
          desafios com uma mentalidade aberta."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView23" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="368dp"
                android:layout_height="137dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/bussiness"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Competências de Futuro Além das competências técnicas e comportamentais,
      existem também as competências de futuro, que serão essenciais em um
      mercado de trabalho cada vez mais dinâmico e movido por inovações. Entre
      essas habilidades estão:
"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Pensamento Crítico: Avaliar as situações de forma analítica e tomar
          decisões baseadas em dados e lógica."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView25" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Inovação e Criatividade: Capacidade de pensar fora da caixa e propor
          soluções que agreguem valor."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView26" />

            <TextView

                android:id="@+id/textView28"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text=" Alfabetização Digital: Compreensão de novas tecnologias, desde o uso
          de ferramentas digitais até conceitos avançados como inteligência
          artificial e blockchain."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView27" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text=" Como Desenvolver Suas Competências? Na Primeira Oportunidade, vamos
      indicar conteúdos educacionais, cursos especializados e ferramentas de
      autoavaliação que ajudam você a entender quais competências precisa
      aprimorar e como aplicá-las no seu dia a dia. Invista no seu
      desenvolvimento e esteja preparado para o futuro do trabalho!
"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView28" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>






    <fragment
        android:id="@+id/bottomMenuFragment"
        android:name="com.fragments.BottomMenuFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>