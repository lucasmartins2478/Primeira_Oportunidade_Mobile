<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityStep2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomMenuFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/background_color"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background_color"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/bottomMenuFragment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/back_button"
                style="@style/BackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onBackPressed"
                android:src="@drawable/back_button"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tips_of_courses"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back_button" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="344dp"
                android:layout_height="154dp"
                android:textColor="@color/black"
                android:layout_marginTop="36dp"
                android:text=" Aprender continuamente é essencial para se destacar no
        mercado de trabalho, especialmente para jovens em busca de sua primeira
        oportunidade.

        Selecionamos algumas plataformas e cursos que podem ajudar a
        desenvolver habilidades importantes, como tecnologia, comunicação e
        liderança."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="276dp"
                android:layout_height="260dp"
                android:src="@drawable/online_education_in_laptop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_marginTop="36dp"
                android:textSize="18sp"
                android:text="Plataformas Recomendadas e seus Principais Cursos:"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"

                android:text="• Coursera: Oferece cursos em diversas áreas, com certificados reconhecidos.
        https://www.coursera.org/specializations/digital-marketing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"

                android:text="• Udemy: Cursos acessíveis para quem quer aprender no seu próprio ritmo.
        https://www.udemy.com/course/web-completo/?couponCode=MTST7102224A2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="  • Alura: Uma plataforma brasileira com foco em tecnologia e desenvolvimento
        de carreira.
        https://www.alura.com.br/formacao-data-science-python?"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text=" • SENAI: Cursos voltados para a qualificação profissional em áreas como
        indústria e tecnologia.
        https://cursos.sesisenai.org.br/curso/tecnico-em-automacao-industrial/2961"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="• Fundação Bradesco: Oferece cursos gratuitos em áreas como informática,
        finanças e empreendedorismo.
        https://www.ev.org.br/cursos/microsoft-excel-2016-avancado"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/black"

                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="289dp"
                android:layout_height="237dp"
                android:src="@drawable/tablet_and_notes_for_online_education"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />


            <TextView
                android:id="@+id/textView16"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="@color/black"

                android:text="  Explore essas opções para adquirir novas competências e se preparar melhor para o
        mercado!"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />






        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>






    <fragment
        android:id="@+id/bottomMenuFragment"
        android:name="com.fragments.BottomMenuFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>