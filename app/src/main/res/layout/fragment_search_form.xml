<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fragments.SearchFormFragment">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <EditText
                android:id="@+id/searchInput"
                style="@style/SearchInput"
                android:hint="@string/search"
                android:textColorHint="@color/gray"
                android:drawableRight="@drawable/close_icon"
                android:drawableLeft="@drawable/search_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/filtersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <!-- UF Spinner -->
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/uf_spinner"
                        style="@style/SpinnerFilter"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/uf_spinner_arrow"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="3dp"
                        android:padding="8dp"
                        android:src="@drawable/select_icon" />
                </RelativeLayout>

                <!-- Modality Spinner -->
                <RelativeLayout
                    android:layout_width="129dp"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/modality_spinner"
                        style="@style/SpinnerFilter"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/modality_spinner_arrow"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="0dp"
                        android:padding="8dp"
                        android:src="@drawable/select_icon" />
                </RelativeLayout>

                <!-- Level Spinner -->
                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/level_spinner"
                        style="@style/SpinnerFilter"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/level_spinner_arrow"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="8dp"
                        android:src="@drawable/select_icon" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color"
            android:paddingBottom="100dp"
            android:clipToPadding="false"
            />


    </LinearLayout>



</FrameLayout>
